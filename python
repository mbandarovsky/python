# Estrutura de tomada de decisão:
def escolhas():
  while True:
    try:
      escolha_do_usuario = int(input("Você gosta de sorvete? Se sim, responda 1, caso contrário, 0:"
      if escolha_do_usuario == 1 or escolha_do_usuario == 0:
        break
      else:
        print("Erro de execução. Favor responder corretamente com 1 ou 0.") 
    except:
      print("Erro de execução. Favor responder corretamente com 1 ou 0.")
if escolhas_do_usuario == 1:
  print("Você tem bom gosto")
else:
  print("Acho melhor você rever seus hábitos...")
escolhas ()
