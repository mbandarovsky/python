# Estrutura de repetição:
ramos_direito= ['Criminal', 'Tributário', 'Empresarial', 'Civil']
esportes=['Natação', 'Tênis', 'Corrida', 'Futebol']

def estrutura_rep(lista):
  for itens in lista:
    print(itens)

estrutura_rep(ramos_direito)
estrutura_rep(esportes)

